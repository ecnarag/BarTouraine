#:kivy 1.8.0

<Personnel>:
    on_press:self.click()
    background_normal:""
    background_color:(0,0,1,0.5) if self.solde >= 0 else (1,0,0,1)
    Label:
        center: self.parent.center
        text: self.parent.last_name

<Conso>:
    on_press:self.perso.action(self)
    Label:
        center: self.parent.center
        text: self.parent.name 

<Stats>:
    Button:
        on_press:self.parent.press()
        Label:
            center: self.parent.center
            font_size:18
            text:"STATS"
    Button:
        on_press:self.parent.inventaireToZero()
        Label:
            center: self.parent.center
            font_size:18
            text:"Reset"

#: kivy 1.0.9

<Bar>:
    user: user
    Label:
        fontsize:50
        center_x:root.width/2
        center_y:root.height/2
        text:"Bienvenue au bar du Touraine !"
    Personnel:
        id: user
        x:0
        top:root.height

<Personnel>:
    size:100,100
    pay: pay
    Button:
        id:pay
        on_press:root.eatConso()
    Label:
        size:50,50
        center_x:root.center_x
        bottom:root.y
        fontsize:30
        text:root.last_name
    Label:
        size:50,50
        center_x:root.center_x
        top:root.height
        fontsize:30
        text:str(root.solde) + "â‚¬"

